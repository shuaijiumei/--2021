/* program/pages/logs/booked_page/booked_page.wxss */
.page{
  height: 100vh;
  width: 100vw;
  background-color: #dcf6f0;
  display: flex;
  justify-content: start;
  align-items: center;
  flex-direction: column;
}

.title{
  width: 750rpx;
}
.title>view:nth-child(1){
  margin-top: 50rpx;
  font-size: x-large;
  font-weight: 700;
  margin-bottom: 30px;
  font-style: italic;
  letter-spacing: .2em;
  color: rgba(238, 90, 36,1.0);
  text-shadow: 2px 1px 3px gray;
  text-align: center;
}

.title>view:nth-child(2){
  font-size:medium;
  font-weight: 600;
  display: flex;
  flex-wrap: wrap;
  margin:10px;
}
.title>view:nth-child(3){
  font-size:medium;
  font-weight: 600;
  display: flex;
  flex-wrap: wrap;
  margin:10px;
}
.line{
  display: block;
  height: 2px;
  width: 100%;
  background-color: rgba(6, 82, 221,1.0);
  margin-top: 5px;
  margin-bottom: 20px;
}
.joined{
  font-weight: 700;
  font-size: larger;
  margin-bottom: 5px;

}

.content{
  width: 300px;
  height: 300px;
  background-color:rgba(255, 195, 18,.8);
  border-radius: 30px;

  display: flex;
  justify-content: start;
  align-items: center;
  flex-direction: column;
  flex-wrap: wrap;

  font-weight: 600;
  font-size: larger;
  padding-top:10px ;
}

.content>view{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 10px;
}
.content>view>image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.footer{
  position: relative;
}
.footer>view{
  position: relative;
  right: -105px;
  bottom: -10px;


  height: 150rpx;
  width: 150rpx;
  border-radius: 50%; 

  font-weight: 600;
  font-style: italic;
  font-size:larger;

  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  letter-spacing: .2em;

  background-color:rgba(234, 32, 39,1.0) ;
  color:white;

  box-sizing: border-box;
  padding: 13px;
}